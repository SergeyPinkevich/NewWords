<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paper"
    android:padding="@dimen/medium_large_padding"
    android:orientation="vertical">

    <TextView
        android:id="@+id/widget_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/appwidget_word"
        android:text="hello"
        android:textColor="@color/black"
        android:textSize="@dimen/widget_text"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/widget_translation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/appwidget_word"
        android:text="привет"
        android:textColor="@color/black"
        android:textSize="@dimen/widget_text" />

    <TextView
        android:id="@+id/widget_translate_direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/appwidget_word"
        android:text="en-ru"
        android:textColor="@color/black"
        android:textSize="@dimen/widget_text"
        android:textStyle="italic" />

</LinearLayout>